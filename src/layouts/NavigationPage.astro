---
import { ViewTransitions } from "astro:transitions";
import Layout from "./Layout.astro";

export interface Props {
  title: string;
  socialImageTitle?: string;
}

const { title, socialImageTitle = title } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(
  `${import.meta.env.BASE_URL}/assets/${socialImageTitle}_800px.jpg`,
  Astro.url,
);
---

<Layout title={title}>
  <meta property="og:title" content={title} slot="head" />
  <meta property="og:type" content="website" slot="head" />
  <meta property="og:url" content={canonicalURL} slot="head" />
  <meta property="og:image" content={socialImageURL} slot="head" />
  <ViewTransitions fallback="none" />
  <main>
    <nav>
      <button> <img src="/portofolio/logo.png" alt="logo" /></button>
      <!-- TODO: make title into component and reuse it here and in the index -->
      <h2>
        <button>tom van der bijl<span>l</span></button>
      </h2>
      <div>
        <a href="/portofolio/contact">contact</a>
        <!-- TODO: place correct href when instagram is ready -->
        <!--        <a href="https://instagram.com"
          ><img src="/portofolio/assets/instagram-logo.svg" /></a
        > -->
      </div>
    </nav>
    <section>
      <slot />
    </section>
  </main>
</Layout>
<script is:inline>
  document
    .querySelector("nav > button:first-of-type")
    .addEventListener("click", () => {
      document.body.scrollIntoView({ behavior: "smooth" });
    });

  document.querySelector("nav > h2 > button").addEventListener("click", () => {
    console.log("here");
    document
      .querySelector("main")
      .scrollIntoView({ behavior: "smooth", block: "start" });
  });
</script>
<style>
  section {
    max-width: 1600px;
    margin-inline: auto;
    padding-inline: 2vw;
    width: 96vw;
  }

  nav {
    border-block-end: 1px solid black;
    position: sticky;
    top: 0;
    background-color: var(--variant-2);
    display: grid;
    padding-inline: 1em;
    align-items: center;
    z-index: 1;
  }

  button {
    padding: 0;
    border: none;
    font: inherit;
    color: inherit;
    background-color: transparent;
    cursor: pointer;
  }
  h2 {
    cursor: default;
  }

  nav > :is(a, button) > img {
    height: 32px;
  }

  @media (min-width: 768px) {
    h2 {
      font-size: 2.4em;
    }
    nav > :is(a, button) > img {
      height: 48px;
    }
  }

  h2 button {
    text-decoration: none;
  }

  h2:hover span {
    margin-inline-start: 4px;
    transition: all 0.5s ease-out;
  }

  nav h2 {
    font-weight: 200;
    grid-column: 1/3;
    justify-self: center;
    grid-row: 1;
  }

  nav div {
    grid-row: 1;
    grid-column: 2;
    justify-self: end;
    display: flex;
    gap: 8px;
    align-items: center;
    font-size: 1.3rem;
  }

  nav div a,
  h2 > button {
    color: var(--text-color);
  }

  nav div a:last-of-type {
    line-height: 0;
  }

  nav div a img {
    width: 24px;
  }

  nav > button {
    width: min-content;
    grid-row: 1;
    grid-column: 1;
  }
</style>
