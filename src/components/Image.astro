---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<button popovertarget="my-popover"><img src="/portofolio/assets/japan_poort.jpg"></button>
<div id="my-popover" popover>
    <button popovertarget="my-popover" popovertargetaction="hide">
        <span aria-hidden=”true”>❌</span>
    </button>
    <img src="/portofolio/assets/japan_poort.jpg">
</div>

<style>

    div[#my-popover] {
        margin-inline-start: auto; 
        display:block;
    }
</style>