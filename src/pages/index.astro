---
import Layout from "../layouts/Layout.astro";
import Photo from "../components/Photo.astro";

const images = [
  { title: "tanabe-2-2-japan-2017", media: "(max-width: 768px)" },
  { title: "tanabe-japan-2017" },
];
---

<Layout title="tom: introductie">
  <main>
    <Photo images={images} className="main-img" />
    <div>
      <h1>tom van der bijl<span>l</span></h1>
      <h2>fotograaf</h2>
    </div>
    <a href={`${import.meta.env.BASE_URL}/home`}>ontdek</a>
  </main>
</Layout>

<style>
  main {
    height: 100vh;
    display: grid;
    grid-template-rows: repeat(4, 1fr);
  }

  main * {
    min-width: 0;
    min-height: 0;
    grid-row: 1;
    grid-column: 1;
  }

  .main-img {
    grid-row: 1/5;
  }

  h1:hover span {
    margin-inline-start: 8px;
    transition: all 0.5s ease-out;
  }

  main a {
    height: min-content;
    width: min-content;
    grid-row: 4;
    justify-self: center;

    font-size: 2em;
    font-weight: 400;
    padding: 16px;
    background: transparent;
    color: white;
    border: 4px solid white;
    border-radius: 16px;

    text-decoration: none;
  }

  main div {
    justify-self: center;
    color: white;
    grid-row: 2;
  }

  main div h1 {
    text-align: center;
    font-size: 3em;
    margin: 0;
    font-weight: 700;
  }

  @media (min-width: 768px) {
    main div h1 {
      font-size: 5em;
    }
  }
  main div h2 {
    font-weight: 200;
    text-align: center;
  }
</style>
