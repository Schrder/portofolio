---
import Layout from "../layouts/Layout.astro";
import Intro from "../components/Intro.astro";
import Home from "../components/Home.astro";

const title = "tom van der bijll";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(
  `${import.meta.env.BASE_URL}assets/tanabe-japan-2017_800px.jpg`,
  Astro.url,
);
---

<Layout title={title}>
  <meta property="og:title" content={title} slot="head" />
  <meta property="og:type" content="website" slot="head" />
  <meta property="og:url" content={canonicalURL} slot="head" />
  <meta property="og:image" content={socialImageURL} slot="head" />
  <Intro />
  <Home />
  <script is:inline>
    document.querySelector("header button")?.addEventListener("click", () => {
      document.querySelector("nav")?.scrollIntoView({ behavior: "smooth" });
    });
  </script>
</Layout>
