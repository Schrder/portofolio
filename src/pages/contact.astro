---
import Layout from "../layouts/Layout.astro";
import { ViewTransitions } from "astro:transitions";
const imageUrl = `${import.meta.env.BASE_URL}/assets/bio-foto_2400px.avif`;

export interface Props {
  title: string;
  socialImageTitle?: string;
}

const { title, socialImageTitle = title } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(
  `${import.meta.env.BASE_URL}/assets/${socialImageTitle}_800px.jpg`,
  Astro.url,
);
---

<Layout title={title}>
  <meta property="og:title" content={title} slot="head" />
  <meta property="og:type" content="website" slot="head" />
  <meta property="og:url" content={canonicalURL} slot="head" />
  <meta property="og:image" content={socialImageURL} slot="head" />
  <ViewTransitions fallback="none" />
  <main>
    <nav>
      <a href="/portofolio/"> <img src="/portofolio/logo.png" alt="logo" /></a>
      <!-- TODO: make title into component and reuse it here and in the index -->
      <h2><a href="/portofolio/">tom van der bijl<span>l</span></a></h2>
      <div>
        <a href="/portofolio/contact">contact</a>
        <!-- TODO: place correct href when instagram is ready -->
        <!--        <a href="https://instagram.com"
          ><img src="/portofolio/assets/instagram-logo.svg" /></a
        > -->
      </div>
    </nav>
    <section>
      <div>
        <h2>EN</h2>
        <p>
          Tom van der Bijll (1993), trained as a cultural anthropologist and
          sociologist, has been photographing since he was fifteen years old,
          back then with a borrowed camera. He mainly focuses on street
          photography, both analogue and digital.
        </p>
        <p>For information and prints: info@tomvanderbijll.com</p>
      </div>

      <img src={imageUrl} width="400" height="400" />
      <div>
        <h2>NL</h2>
        <p>
          Tom van der Bijll (1993), opgeleid als cultureel
          antropoloog-socioloog, fotografeert vanaf zijn vijftiende, toen nog
          met een geleende camera. Richt zich met name op straatfotografie,
          zowel analoog als digitaal.
        </p>
        <p>Voor informatie en fotoprints: info@tomvanderbijll.com</p>
      </div>
    </section>
  </main>
</Layout>
<style>
  main {
    display: grid;
    grid-template-rows: 54px 1fr;
    row-gap: 48px;
  }

  nav {
    border-block-end: 1px solid black;
    position: sticky;
    top: 0;
    background-color: var(--variant-2);
    display: grid;
    padding-inline: 1em;
    align-items: center;
    z-index: 1;
  }

  nav > h2 {
    cursor: default;
  }

  nav > a > img {
    height: 32px;
  }

  @media (min-width: 768px) {
    nav h2 {
      font-size: 2.4em;
    }
    nav > a > img {
      height: 48px;
    }
  }

  nav h2 a {
    text-decoration: none;
  }

  nav h2:hover span {
    margin-inline-start: 4px;
    transition: all 0.5s ease-out;
  }

  nav h2 {
    font-weight: 200;
    grid-column: 1/3;
    justify-self: center;
    grid-row: 1;
  }

  nav div {
    grid-row: 1;
    grid-column: 2;
    justify-self: end;
    display: flex;
    gap: 8px;
    align-items: center;
    font-size: 1.3rem;
  }

  nav div a,
  nav h2 > a {
    color: var(--text-color);
  }

  nav div a:last-of-type {
    line-height: 0;
  }

  nav div a img {
    width: 24px;
  }

  nav > a {
    width: min-content;
    grid-row: 1;
    grid-column: 1;
  }

  section h2 {
    margin: 0;
    font-weight: 300;
  }

  section {
    max-width: 130ch;
    margin-inline: auto;
    padding-inline: 1rem;
  }

  section > div:first-of-type {
    grid-column: 1;
    grid-row: 2;
  }

  section > img {
    grid-column: 2;
    grid-row: 1 / span 2;

    display: block;
    object-fit: cover;
    clip-path: circle();

    margin-inline: auto;
    background-color: lightgray;
  }

  section > div:last-of-type {
    grid-column: 3;
    grid-row: 2;
  }

  @media (min-width: 768px) {
    section {
      display: grid;
      grid-template-columns: 1fr min-content 1fr;
      grid-template-rows: 180px;
      column-gap: 2rlh;
    }

    section > img {
      margin-inline: 0;
    }
  }
</style>
