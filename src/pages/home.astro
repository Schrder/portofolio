---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<nav>
			<h2>tom van der bijll</h2>
			<div>
				<a href="/portofolio/over">over</a>
				<a href="/portofolio/contact">contact</a>
				<a href="https://instagram.com"><img src="/portofolio/assets/instagram-logo.svg"></a>
			</div>
		</nav>
		<img src="/portofolio/assets/japan_poort.jpg">
		<img src="/portofolio/assets/japan_bus.jpg">
		<img src="/portofolio/assets/japan_paal.jpg" alt="">
	</main>
</Layout>

<style>
	nav {
		border-block-end: 1px solid black;
		position: sticky;
		top: 0;
		grid-column: 1/3;
		background-color: var(--variant-2);
		display: grid;
		padding-inline: 1em;
		align-items: center;
	}

	nav h2 {
		font-weight: 200;
		grid-column: 1/3;
		justify-self: center;
		grid-row: 1;
	}

	nav div {
		grid-row: 1;
		grid-column: 2;
		justify-self: end;
		display: flex;
		gap: 8px;
		align-items: center;
	}

	nav div a {
		color: var(--text-color);
	}

	nav div a:last-of-type {
		line-height: 0;
	}

	nav div a img {
		width: 24px;
	}

	main {
		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-template-rows: 48px calc(100vh - 64px) 100vh;
		column-gap: 8px;
		row-gap: 8px;
	}

	img {
		max-width: 100%;
		max-height: 100%;

		/* Reset initistic image widths for css grid */
		min-width: 0;
		min-height: 0;
	}

	img:nth-of-type(1) {
		grid-column: 1/3;
	}

	img:nth-of-type(1), img:nth-of-type(2) {
		place-self: center;
	}

	img:nth-of-type(3) {
		place-self: end	;
	}
</style>