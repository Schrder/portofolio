---
import NavigationPage from "../layouts/NavigationPage.astro";
import Photo from "../components/Photo.astro";
---

<NavigationPage title="tom's portoflio">
  <section>
    <img src="/portofolio/assets/japan_bus.jpg" loading="eager" />
    <img src="/portofolio/assets/japan_poort.jpg" loading="eager" />
    <img src="/portofolio/assets/goudsmid-zurich.jpg" loading="eager" alt="" />
    <img
      src="/portofolio/assets/verbouwen-amsterdam.jpg"
      alt=""
      loading="lazy"
    />
    <img
      src="/portofolio/assets/man-met-krant-madrid.jpg"
      alt=""
      loading="lazy"
    />
    <img src="/portofolio/assets/japan_paal.jpg" alt="" loading="lazy" />
    <img src="/portofolio/assets/motor-casablanca.jpg" alt="" loading="lazy" />
    <img src="/portofolio/assets/klaprozen-qazvin.jpg" alt="" loading="lazy" />
  </section>
</NavigationPage>

<style>
  section {
    display: grid;
    grid-template-columns: repeat(2, 0.8415fr) 1fr;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: repeat(5, 22vw);
    gap: 8px;
    grid-column: 1/3;
    padding-inline: 24px;
    margin-block-end: 32px;
  }

  img {
    max-width: 100%;
    max-height: 100%;

    /* Reset initistic image widths for css grid */
    min-width: 0;
    min-height: 0;

    border-radius: 8px;
    background-color: var(--variant-2);
    grid-column: var(--image-grid-column);
    grid-row: var(--image-grid-row);
    aspect-ratio: var(--image-aspect-ratio);
  }

  section img:nth-of-type(1) {
    --image-grid-column: 1 / span 2;
    --image-grid-row: 1 / span 2;
    align-self: center;
    --image-aspect-ratio: 2560/1698;
  }

  section img:nth-of-type(2) {
    --image-grid-column: 3;
    --image-grid-row: 1;
    --image-aspect-ratio: 2560/1698;
  }

  section img:nth-of-type(3) {
    --image-grid-column: 3;
    --image-grid-row: 2 / span 2;
    --image-aspect-ratio: 1719/2560;
  }

  section img:nth-of-type(4) {
    --image-grid-column: 1;
    --image-grid-row: 3 / span 2;
    --image-aspect-ratio: 1575/2554;
  }
  section img:nth-of-type(5) {
    --image-grid-row: 3;
    --image-grid-column: 2;
    --image-aspect-ratio: 2560/1709;
  }
  section img:nth-of-type(6) {
    --image-grid-row: 4 / span 2;
    --image-grid-column: 3;
  }
  section img:nth-of-type(7) {
    --image-grid-row: 4;
    --image-grid-column: 2;
  }
  section img:nth-of-type(8) {
    --image-grid-row: 5;
    --image-grid-column: 2;
  }
</style>
