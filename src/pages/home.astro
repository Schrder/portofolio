---
import NavigationPage from "../layouts/NavigationPage.astro";
import Photo from "../components/Photo.astro";
---

<NavigationPage title="tom: fotos">
  <section>
    <Photo title="berlijn-duitsland-2022" sizes="66vw" className="img1" />
    <Photo title="funatsu-japan-2017" sizes="33vw" className="img2" />
    <Photo title="fransum-nederland-2017" sizes="33vw" className="img3" />
    <Photo title="tanabe-2-japan-2017" sizes="66vw" className="img4" />
    <Photo title="darelkebdani-marokko-2015" sizes="50vw" className="img5" />
    <Photo title="jeruzalem-israel-2014" sizes="50vw" className="img6" />
  </section>
</NavigationPage>

<style>
  section {
    display: grid;
    grid-template-columns: repeat(4, 0.42075fr) repeat(2, 0.5fr);
    grid-template-rows: repeat(5, 20vw);
    grid-template-areas:
      "img1 img1 img1 img1 img2 img2"
      "img1 img1 img1 img1 img2 img2"
      "img3 img3 img4 img4 img4 img4"
      "img3 img3 img4 img4 img4 img4"
      "img5 img5 img5 img6 img6 img6"
      "img5 img5 img5 img6 img6 img6"
      "img5 img5 img5 img6 img6 img6";
    gap: 8px;
    grid-column: 1/3;
    padding-inline: 2vw;
    margin-block-end: 32px;
  }
  .img1 {
    --photo-grid-area: img1;
  }
  .img2 {
    --photo-grid-area: img2;
    --photo-object-position: 50% 100%;
  }
  .img3 {
    --photo-grid-area: img3;
    --photo-object-position: 50% 100%;
  }
  .img4 {
    --photo-grid-area: img4;
  }
  .img5 {
    --photo-grid-area: img5;
  }
  .img6 {
    --photo-grid-area: img6;
  }
</style>
